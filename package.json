{
  "name": "fyg",
  "version": "1.0.0",
  "description": "Fyg is a simple functional programming language to build system quickly and easily",
  "type": "module",
  "main": "index.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "res:build": "rescript",
    "res:clean": "rescript clean",
    "res:dev": "rescript -w",
    "peggy:build": "peggy -o ./src/parser.build.js --format es ./src/fyg.pegjs",
    "compile:binary": "bun build ./src/Main.res.mjs -e std --outdir ./build && qjsc ./build/Main.res.js -o fyg -m",
    "test": "run-s peggy:build res:build && echo 'Rescript compilation successful!\n' && node --experimental-vm-modules node_modules/.bin/jest",
    "build": "run-s peggy:build res:build compile:binary",
    "go": "npm run build && echo 'Application output:\n' && ./fyg ./examples/simple.fyg"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "peggy": "^4.0.2",
    "rescript": "^11.1.0-rc.3"
  },
  "dependencies": {
    "@greenlabs/rescript-jest": "^28.1.0",
    "@rescript/core": "^1.1.0"
  }
}
